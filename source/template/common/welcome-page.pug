section.section.welcome-page
	.social.welcome-page__social
		ul.social__list
			li.social__item
				a.social__link(href="https://vk.com/korol_egor" target="_blank")
					svg.social-icon(width="31" height="17")
						use(xlink:href="assets/img/sprite.svg#vk")
			li.social__item
				a.social__link(href="https://github.com/EgorKorol" target="_blank")
					svg.social-icon(width="26" height="22")
						use(xlink:href="assets/img/sprite.svg#github")
	.hamburger-menu__welcome-page
		button.hamburger.hamburger--spin(type="button" href="#")
			span.hamburger-box
				span.hamburger-inner
	.title__img
		svg.header-icon
			use(xlink:href="assets/img/sprite.svg#portfolio_header")
	.hero.welcome-page__hero
		.hero-img
			img.hero-avatar(src="assets/img/myphoto.jpg", alt="Моя фотография")
