extends ../_template

block variables
  - var title = 'Мои работы'

block content
  include ../common/welcome-page_works
  section.works
    .works-title
      h1.about-title Мои работы
      svg.about-title__icon(width="506" height="165")
        use(xlink:href="assets/img/sprite.svg#works_header")
    .works-slider
      .slider-info
        ul.slider-info__list
          li.slider-info__item
            .slider-info__title
              h2.subtitle Сайт школы онлайн образования
            .slider-info__description
              .slider-info__description-text HTML, CSS, webkit-javascript-ident
            .slider-info__btn
              a.slider-info__btn-link(href="#" target="_blank") Посмотреть сайт
                svg.slider-info__btn-icon(width="20" height="19")
                  use(xlink:href="assets/img/sprite.svg#link")
      .slider-slide
        ul.slide-list
          li.slide-item
            img.slide-img(src="assets/img/work_loft.jpg", alt="Сайт школы LoftSchool")
          li.slide-item
            img.slide-img(src="assets/img/work_ioga.jpg", alt="Сайт йоги")
          li.slide-item
            img.slide-img(src="assets/img/work_trialog.jpg", alt="Сайт мебели")
      .slider-buttons
        .slider-buttons__left
          .slider-buttons__left-img
          .slider-buttons__left-arrow
            svg.arrow-icon(width="43" height="27")
              use(xlink:href="assets/img/sprite.svg#portf_arrow_down")
        .slider-buttons__right
          .slider-buttons__right-img
          .slider-buttons__right-arrow
            svg.arrow-icon(width="43" height="27")
              use(xlink:href="assets/img/sprite.svg#portf_arrow_up ")
  section.comment
    .comment-title
      h1.about-title Что обо мне говорят
      svg.about-title__icon(width="499" height="175")
        use(xlink:href="assets/img/sprite.svg#about_header")
    .comment-info
      ul.comment-info-list
        li.comment-info-item
          .comment-description
            .comment-description__img
              img.comment-description__avatar(src="assets/img/dkovaldn.jpg", alt="")
            .comment-description__text Этот парень проходил обучение веб-разработке не где-то, а в LoftSchool! 4 месяца только самых тяжелых испытаний и бессонных ночей!
            .comment-description__from
              .comment-description__from-autor Ковальчук Дмитрий
              .comment-description__from-position - основатель LoftSchool
        li.comment-info-item
          .comment-description
            .comment-description__img
              img.comment-description__avatar(src="assets/img/vsabanc.jpg", alt="")
            .comment-description__text Этот код выдержит любые испытания. Только пожалуйста, не загружается сайт на слишком старых браузерах!
            .comment-description__from
              .comment-description__from-autor Владимир Сабанцев
              .comment-description__from-position - преподаватель в LoftSchool
    .comment-form
      form.form(action="")
        .form-title
          h2.subtitle Связаться со мной
        input.input-form__comment#name(type="text" placeholder="Имя")
        label.visuallyhidden(for="name") Ваше имя
        input.input-form__comment#email(type="text" placeholder="Email")
        label.visuallyhidden(for="Email") Ваш email
        textarea.textarea-form__comment#message(name="message" placeholder="Ваше сообщение")
        label.visuallyhidden(for="message") Вашу сообщение
        nav.nav-menu
          ul.nav-menu__list
            li.nav-menu__item
              button.nav-menu__link.nav-menu__link--form(form="data-comment" type="submit") Отправить
            li.nav-menu__item
              button.nav-menu__link.nav-menu__link--form(form="data-comment" type="reset") Очистить



  //- include ../common/footer