extends ../_template

block variables
  - var title = 'Главная'

block content
  .welcome-page
    button.autorization-btn.welcome-page__autorization(type="button") Авторизоваться
    .flipper-box
      .flipper
        .welcome-card
          .welcome-info
            .hero-img
              img.hero-avatar(src="assets/img/myphoto.jpg", alt="Моя фотография")
            .hero-info
              .hero-info__name Егор Король
              .hero-info__description Личный сайт веб разработчика
            include ../common/social
          nav.nav-menu
            ul.nav-menu__list
              li.nav-menu__item
                a.nav-menu__link(href="my-works.html") 
                  span.nav-menu__link-text Мои работы
              li.nav-menu__item
                a.nav-menu__link(href="about.html") 
                  span.nav-menu__link-text Обо мне
              li.nav-menu__item
                a.nav-menu__link(href="blog.html") 
                  span.nav-menu__link-text Блог
        .welcome-card.welcome-card--form
          .welcome-info.welcome-info--form
            form.welcome-form#data(method="post")
              .title.title--welcome-form Авторизуйтесь
              .welcome-form__input
                .input-decore
                  svg.input-decore__icon.input-decore__icon--login(width="15" height="17")
                    use(xlink:href="assets/img/sprite.svg#login")
                input.form-input(type="text" id="login" placeholder="Логин")
                label.label-input(for="login")
              .welcome-form__input
                .input-decore
                  svg.input-decore__icon.input-decore__icon--password
                    use(xlink:href="assets/img/sprite.svg#password")
                input.form-input(type="password" id="password" placeholder="Пароль")
                label.label-input(for="password")
              .welcome-form__checkbox
                input.form-checkbox(type="checkbox" id="checkbox")
                label.label-checkbox(for="checkbox") Я человек
              .welcome-form__radio
                .welcome-form__radio-question Вы точно не робот?
                input.form-radio(type="radio" id="radiobtnYes" name="robot")
                label.label-radio(for="radiobtnYes") Да
                input.form-radio(type="radio" id="radiobtnNo" name="robot")
                label.label-radio(for="radiobtnNo") Не уверен
          .welcome-card__form-buttons
            button.nav-menu__link.nav-menu__link--form.nav-menu__link--flipback-js(href="#") На главную
            button.nav-menu__link.nav-menu__link--form(form="data" type="submit") Войти
    footer.welcome-footer
      span.welcome-footer__text &#169 Егор Король | LoftSchool | 2017